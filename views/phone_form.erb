<h2>Enter a phone number for <%= @contact.first_name() %>:</h2>

<form class="well" action="/new_phone" method="post">

  <input id="contact_id" name="contact_id" type="hidden" value='<%= @contact.id() %>'>

  <label for='area_code'>Area Code:</label>
  <input id='area_code' name='area_code' type='text'>

  <label for='number'>Number:</label>
  <input id='number' name='number' type='text'>

  <select class="form-control form-group" name="type" id="type">
    <option>Home</option>
    <option>Cell</option>
    <option>Work</option>
  </select>

  <button type="submit" class="btn btn-primary">Add Number</button>
</form>
